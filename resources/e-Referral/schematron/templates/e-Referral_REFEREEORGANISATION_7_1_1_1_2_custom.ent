    <pattern name="p-e-Referral_REFEREEORGANISATION_7_1_1_1_2_custom-errors"
        id="p-e-Referral_REFEREEORGANISATION_7_1_1_1_2_custom-errors"
        see="#p-e-Referral_REFEREEORGANISATION_7_1_1_1_2_custom-errors">

        <rule context="/cda:ClinicalDocument/cda:participant[@typeCode = 'REFT']/cda:associatedEntity[cda:scopingOrganization]/cda:addr">

            <assert test="document('TEMPLATE/VALDN/CDAValidate_Vocabs.xml', .)/systems/system[@codeSystemName = 'ISO3166-1']/code[translate(@displayName, 'abcdefghijklmnopqrstuvwxyz', 'ABCDEFGHIJKLMNOPQRSTUVWXYZ') = translate(current()/cda:country, 'abcdefghijklmnopqrstuvwxyz', 'ABCDEFGHIJKLMNOPQRSTUVWXYZ')]/@code = 'AU'"
                >Error: e-Referral - 7.1.1.1.2 REFEREE ORGANISATION - "Referee / Participant /
                Address / Australia or International Address / International Address / Country" -
                The 'country' tag shall contain the value 'Australia'. Refer to section 7.1.1.1.2 of
                the e-Referral_CDA_Implementation_Guide_v2.2.</assert>             

        </rule>
        
    </pattern>

