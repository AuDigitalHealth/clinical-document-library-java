<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.infy</groupId>
    <artifactId>clinical-document-library</artifactId>
    <version>4.0.0</version>

    <dependencies>
        <dependency>
            <groupId>au.gov.nehta.vendorlibrary</groupId>
            <artifactId>nehta-vendorlibrary-java-common</artifactId>
            <version>1.0.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/nehta-vendorlibrary-java-common-1.0.1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>au.net.electronichealth.ns</groupId>
            <artifactId>nehta-rpvis-compiled-xsd-cda-common</artifactId>
            <version>2.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/nehta-rpvis-compiled-xsd-cda-common-2.1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>au.gov.nehta.common.utils</groupId>
            <artifactId>nehta-rpvis-compiled-xsd-cda-common</artifactId>
            <version>1.2</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/nehta-smi-common-utils-1.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>au.gov.nehta.schematron</groupId>
            <artifactId>nehta-schematron-check</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/nehta-schematron-check-1.0.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>2.10.5</version>
        </dependency>
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>2.3.1</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <compilerArgs>
                        <arg>-Xlint:unchecked</arg>
                    </compilerArgs>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
