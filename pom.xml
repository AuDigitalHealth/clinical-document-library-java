<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>au.gov.digitalhealth</groupId>
	<artifactId>clinical-document-library</artifactId>
	<version>1.0-SNAPSHOT</version>

	<name>Clinical Document Library</name>

	<repositories>
		<repository>
			<id>github</id>
			<name>GitHub stav09 Apache Maven Packages</name>
			<url>https://maven.pkg.github.com/stav09/clinical-document-library-java</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>commons-jxpath</groupId>
			<artifactId>commons-jxpath</artifactId>
			<version>1.3</version>
		</dependency>

		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
			<version>1.6.2</version>
		</dependency>

		<dependency>
			<groupId>au.gov.nehta</groupId>
			<artifactId>nehta-rpvis-compiled-xsd-cda-common</artifactId>
			<version>2.1</version>
		</dependency>

		<dependency>
			<groupId>au.gov.nehta</groupId>
			<artifactId>nehta-schematron-check</artifactId>
			<version>1.0</version>
		</dependency>

		<dependency>
			<groupId>au.gov.nehta</groupId>
			<artifactId>nehta-vendorlibrary-java-common</artifactId>
			<version>1.0.1</version>
		</dependency>

		<dependency>
			<groupId>au.gov.nehta</groupId>
			<artifactId>nehta-smi-common-utils</artifactId>
			<version>1.2</version>
		</dependency>

		<dependency>
			<groupId>org.glassfish.jaxb</groupId>
			<artifactId>jaxb-runtime</artifactId>
			<version>2.3.2</version>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>net.sf.saxon</groupId>
			<artifactId>saxon</artifactId>
			<version>8.7</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>net.sf.saxon</groupId>
			<artifactId>saxon-dom</artifactId>
			<version>8.7</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.22.0</version>
			</plugin>
		</plugins>
	</build>

</project>