
    <!-- Context: ClinicalDocument/component/structuredBody/component[dia_inv]/section -->

    <!-- Discharge Summary Clinical Document:  7.1.1.2 Problems/Diagnoses This Visit -->


    <!-- Status: Last Reviewed: Not reviewed
         Status: Last Updated : 09/04/2012 -->


    <pattern name="p-e-Discharge_Summary_2_Problems_Diagnoses_This_Visit-errors"
        id="p-e-Discharge_Summary_2_Problems_Diagnoses_This_Visit-errors"
        see="#p-e-Discharge_Summary_2_Problems_Diagnoses_This_Visit-errors">

        <!-- Problems/Diagnoses This Visit - 1..1 -->

       <rule
            context="/cda:ClinicalDocument/cda:component/cda:structuredBody/cda:component/cda:section[cda:component/cda:section/cda:code/@code = '101.16142']">

            <!-- section -->
            <report test="count(cda:component[cda:section/cda:code/@code = '101.16142']) > 1">Error:
                e-Discharge Summary - 7.1.1.2 Problems/Diagnoses This Visit - The 'component' tag
                shall appear only once. Refer to section 7.1.1.2 of the
                e-Discharge_Summary_CDA_Implementation_Guide_v3.4.</report>

        </rule>

        <rule
            context="/cda:ClinicalDocument/cda:component/cda:structuredBody/cda:component/cda:section[cda:code/@code='101.16006']/cda:component[cda:section/cda:code/@code = '101.16142']">

            <!-- section -->
            <report test="count(cda:section) > 1">Error: e-Discharge Summary - 7.1.1.2
                Problems/Diagnoses This Visit -The 'section' tag shall appear only once. Refer to
                section 7.1.1.2 of the
                e-Discharge_Summary_CDA_Implementation_Guide_v3.4.</report>

        </rule>


        <rule
            context="/cda:ClinicalDocument/cda:component/cda:structuredBody/cda:component/cda:section[cda:code/@code='101.16006']/cda:component/cda:section[cda:code/@code = '101.16142']">

            <!-- code -->
            <report test="count(cda:code) > 1">Error: e-Discharge Summary - 7.1.1.2 Problems/Diagnoses
                This Visit -The 'code' tag shall appear only once. Refer to section 7.1.1.2 of the
                e-Discharge_Summary_CDA_Implementation_Guide_v3.4.</report>

            <!-- Updated by RV 09/04/2012 - Mantis Id - 3038 -->

            <assert test="cda:title">Error: e-Discharge
                Summary - 7.1.1.2 Problems/Diagnoses This Visit - The 'title' tag is missing.
                Refer to section 7.1.1.2 of the
                e-Discharge_Summary_CDA_Implementation_Guide_v3.4.</assert>

            <report test="cda:title and not(translate(cda:title, 'abcdefghijklmnopqrstuvwxyz', 'ABCDEFGHIJKLMNOPQRSTUVWXYZ') = 'PROBLEMS/DIAGNOSES THIS VISIT')">
                Error: e-Discharge
                Summary - 7.1.1.2 Problems/Diagnoses This Visit - The 'title' tag shall contain the value 'Problems/Diagnoses This Visit'.
                Refer to section 7.1.1.2 of the e-Discharge_Summary_CDA_Implementation_Guide_v3.4.
            </report>
            <!-- Update Ended - Mantis Id - 3038 -->
            <!-- All other 'title' and 'text' tags are tested in the 1B Narratives file -->
        </rule>


        <rule context="cda:code[@code = '101.16142']">

            <!-- code -->
            <assert
                test="/cda:ClinicalDocument/cda:component/cda:structuredBody/cda:component/cda:section/cda:component/cda:section/cda:code[@code = '101.16142']"
                >Error: e-Discharge Summary - 7.1.1.2 Problems/Diagnoses This Visit - The
                '/cda:ClinicalDocument/cda:component/cda:structuredBody/cda:component/cda:section/cda:component/cda:section/cda:code[@code
                = '101.16142']' path - 1 or more tags are missing. Refer to section 7.1.1.2 of the
                e-Discharge_Summary_CDA_Implementation_Guide_v3.4.</assert>

            <!-- code/@ -->
            <assert test="@codeSystem = '1.2.36.1.2001.1001.101'">Error: e-Discharge Summary - 7.1.1.2
                Problems/Diagnoses This Visit - The 'code' tag 'codeSystem' attribute shall be
                '1.2.36.1.2001.1001.101'. Refer to section 7.1.1.2 of the
                e-Discharge_Summary_CDA_Implementation_Guide_v3.4.</assert>

            <assert
                test="translate(@codeSystemName, 'abcdefghijklmnopqrstuvwxyz', 'ABCDEFGHIJKLMNOPQRSTUVWXYZ') = 'NCTIS DATA COMPONENTS'"
                >Error: e-Discharge Summary - 7.1.1.2 Problems/Diagnoses This Visit - The 'code' tag
                'codeSystemName' attribute shall contain the value 'NCTIS Data Components'. Refer to section
                7.1.1.2 of the
                e-Discharge_Summary_CDA_Implementation_Guide_v3.4.</assert>

            <assert
                test="translate(@displayName, 'abcdefghijklmnopqrstuvwxyz', 'ABCDEFGHIJKLMNOPQRSTUVWXYZ') = 'PROBLEMS/DIAGNOSES THIS VISIT'"
                >Error: e-Discharge Summary - 7.1.1.2 Problems/Diagnoses This Visit - The 'code' tag
                'displayName' attribute shall contain the value 'Problems/Diagnoses This Visit'. Refer to section
                7.1.1.2 of the
                e-Discharge_Summary_CDA_Implementation_Guide_v3.4.</assert>


        </rule>

    </pattern>
