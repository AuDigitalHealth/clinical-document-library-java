                Advanced_Care_Directive_Custodian_Record_CDA_Implementation_Guide_v1.0.</assert>-\->
          </rule>-->


        <!-- Person Name - 1..* -->
        <!-- The attributes of cda:name tag are being tested inside "Advanced_Care_Directive_Custodian_Record_Global_Checks.ent" -->


    </pattern>

